{% extends "_layout.html.jinja" %}
{% set active_page = "players" %}

{% block body %}
<section class="content">
  <div class="box">
    <div class="box-header">
      <h3 class="box-title">Players</h3>
    </div>
    <div class="box-body">
      <table id="players-table" class="table table-bordered table-striped">

      <thead>
        <tr>
          <th>Player name</th>
          <th>Plays</th>
          <th>Wins / Defeats</th>
          <th>Ratio</th>
        </tr>
      </thead>

      {% for player in Player.select() %}
        <tr>
          <td>{{ player.name }}</td>
          <td>{{ player.plays }}</td>
          <td>{{ player.wins }} / {{ player.defeats }}</td>
          <td>{% if player.ratio != None %} {{ player.ratio|round(precision=2) }} {% else %} &infin; {% endif %}</td>
        </tr>
      {% endfor %}

      </table>
    </div>
  </div>
</section>
{% endblock %}

{% block scripts %}
<script type="text/javascript" charset="utf-8">
  $(function () {
    $("#players-table").DataTable({
      "searching": false,
      "order": [[ 1, 'desc' ]],
      "lengthChange": false,
      "pageLength": 15,
    });
  });
</script
{% endblock %}
